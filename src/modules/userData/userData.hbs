<div class='{{styles.userData}} {{className}}'>
  <p class={{styles.item}}>
    <label for='email'>Почта</label>
    {{{emailInput}}}
    {{#if isEditable}}
      <span class={{styles.errorMessage}}>Введите почту</span>
    {{/if}}
  </p>

  <p class={{styles.item}}>
    <label for='login'>Логин</label>
    {{{loginInput}}}
    {{#if isEditable}}
      <span class={{styles.errorMessage}}>Введите логин</span>
    {{/if}}
  </p>

  <p class={{styles.item}}>
    <label for='first_name'>Имя</label>
    {{{firstNameInput}}}
    {{#if isEditable}}
      <span class={{styles.errorMessage}}>Введите имя</span>
    {{/if}}
  </p>

  <p class={{styles.item}}>
    <label for='second_name'>Фамилия</label>
    {{{secondNameInput}}}
    {{#if isEditable}}
      <span class={{styles.errorMessage}}>Введите фамилию</span>
    {{/if}}
  </p>

  <p class={{styles.item}}>
    <label for='display_name'>Имя в чате</label>
    {{{displayNameInput}}}
    {{#if isEditable}}
      <span class={{styles.errorMessage}}>Введите имя в чате</span>
    {{/if}}
  </p>

  <p class={{styles.item}}>
    <label for='phone'>Телефон</label>
    {{{phoneInput}}}
  </p>
</div>