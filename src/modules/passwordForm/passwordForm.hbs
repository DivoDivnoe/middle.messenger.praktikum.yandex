<div class="{{passwordFormStyles.profile}}">
  {{> avatar className=passwordFormStyles.avatar size='large' isEditable=false}}

  <h1 class="visually-hidden">Редактирование пароля</h1>

  <form>
    <fieldset>
      <legend class="visually-hidden">Пароли</legend>

      <p class={{passwordFormStyles.item}}>
        <label for='old_password'>Старый пароль</label>
        {{> input id='old_password' name='old_password' type='password' placeholder='Старый пароль' required=true disabled=false }}
        <span class={{passwordFormStyles.errorMessage}}>Введите старый пароль</span>
      </p>

      <p class={{passwordFormStyles.item}}>
        <label for='new_password'>Новый пароль</label>
        {{> input id='new_password' name='new_password' type='password' placeholder='Новый пароль' required=true disabled=false }}
        <span class={{passwordFormStyles.errorMessage}}>Введите новый пароль</span>
      </p>

      <p class={{passwordFormStyles.item}}>
        <label for='new_password_extra'>Повторите новый пароль</label>
        {{> input id='new_password_extra' name='new_password_extra' type='password' placeholder='Повторите новый пароль' required=true disabled=false }}
        <span class={{passwordFormStyles.errorMessage}}>Пароли не совпадают</span>
      </p>
    </fieldset>

    {{> button type='submit' content='Сохранить' }}
  </form>
</div>