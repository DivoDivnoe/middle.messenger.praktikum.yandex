{{#if isEditable}}
  <div
    class='{{className}}
      {{avatarStyles.avatar}}
      {{lookup avatarStyles size}}
      {{avatarStyles.isEditable}}'
  >
    {{#if src}}
      <img src={{src}} alt='your avatar' />
    {{/if}}
  </div>
{{else}}
  <div class='{{className}} {{avatarStyles.avatar}} {{lookup avatarStyles size}}'>
    {{#if src}}
      <img src={{src}} alt='your avatar' />
    {{/if}}
  </div>
{{/if}}