{{#if isEditable}}
  <div class='{{className}} {{styles.avatar}} {{lookup styles size}} {{styles.isEditable}}'>
    {{#if src}}
      <img
        class='{{styles.image}}'
        src='https://ya-praktikum.tech/api/v2/resources/{{src}}'
        alt='your avatar'
      />
    {{/if}}
  </div>
{{else}}
  <div class='{{className}} {{styles.avatar}} {{lookup styles size}}'>
    {{#if src}}
      <img
        class='{{styles.image}}'
        src='https://ya-praktikum.tech/api/v2/resources/{{src}}'
        alt='your avatar'
      />
    {{/if}}
  </div>
{{/if}}